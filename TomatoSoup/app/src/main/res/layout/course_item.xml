<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="course"
            type="com.delicious.tomatosoup.model.Course" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/courseItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/course_margin"
        android:clickable="true"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="@dimen/course_margin"
        app:cardElevation="@dimen/course_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:text="@{course.className}"
                tools:text="電子學" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
