<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="date"
            type="com.delicious.tomatosoup.model.Date" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dateItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/course_margin"
        android:clickable="true"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="@dimen/course_margin"
        app:cardElevation="@dimen/course_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:text="@{date.date}"
                tools:text="10-09-2022" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
